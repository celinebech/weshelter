---
const { billede, altText, beskrivelse, link } = Astro.props;
---

<article>
  <div class="ikon-container">
    <img class="ikon" src={`img/${billede}`} alt={altText} />
  </div>
  <p>{beskrivelse}</p>
  <u>{link}</u>
</article>

<style>
  article {
    position: relative;
    padding-top: 3rem;
    text-align: center;
    margin: 5rem;
    width: 500px;
    height: 100px;
    border-radius: 20px;
    background-color: #235ad1;
    color: white;
  }

  .ikon-container {
    position: absolute;
    top: -40px;
    left: 36%;
    background-color: #10182d;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    padding: auto;
    transform: translateX(-50%);
  }

  .ikon {
    max-width: 70%;
  }

  p u {
    margin: 0 auto;
  }
</style>
